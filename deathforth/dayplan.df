: dog-driver cyoa-new "Mas victimas para la Carretera de la Muerte" cyoa-title! ($ "Sin idea de como conducir un coche, " .. somename .. " ' lo conduce a un pozo y se desvanece. El viaje a Canada ha terminado." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	// This one's no longer used, on launch of the game you'd lose for only having dogs.
	delete-the-game
	choice( "POR DIOS" )choice: quit-to-title ;
	
: petnodrivetext
	ccat? if
		"ESE MALES GATO"
	else
		"FIN... O SI?"
	then
;
	
: no-driver cyoa-new "Mas victimas para la Carretera de la Muerte" cyoa-title! ($ "Con nadie mas" vehicle.which@
	if .. " 'para conducir el coche" then .. ", el viaje a Canada ha llegado a su fin." $) cyoa-text!
	0 cyoa-image-icon! 1 500 tone
	choosepet
	cpet? if
		($ "Oh wait... there's still a " .. cyoa{ cdogcat } .. " 'vivo." $) +crtext
		cdog? if
			($ cname .. " 'espanol' and the other in 'ingles' and then translates it to the other language. " .. chis .. "  mente animal primitiva " .. "CANADA" rbold $) +crtext
			vehicle.which@ if
				($ cname .. "  obtiene las llaves, las pone en el encendido del coche, y lo arranca. Adelante a Canada!" $)
			else
				($ cname .. " corre en un circulo pequeno durante un rato, luego comienza a caminar en direccion norte-ish. A por Canada!\" $)
			then +crtext goodfx cchar .dogtosuperdog goodfx
		else
			ccat? if 
				($ cname .. " escupe una bola de pelo." $)
			else
				($ cname .. " estornuda." $)
			then
				+crtext
				($ " " .. cHe .. "no esta para nada interesado en esta tonteria de Canada, y se va dando un paseo." $) +text
				clear-streak delete-the-game
				choice( petnodrivetext )choice: quit-to-title
		then			
	else
		clear-streak delete-the-game
		choice( "POR DIOS" )choice: quit-to-title
	then
;
		
