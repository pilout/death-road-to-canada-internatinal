: ifthen swap if execute then ;
: ifelsethen args( check a b ) <- check if <- a else <- b then execute ;

: #charprop: " #c " token $cat postpone literal postpone $cat postpone save-prop ; immediate

: #dumpstats
	STAT_COUNT for
		// <statid> <char#> .stat
		i 1- " " $cat over $cat
		dup #charprop: .stat
		dup #charprop: .knownstat
		#charprop: .bonus
	next
	drop
;

: #dumploot
	LOOT_COUNT for
		// <lootid> <char#> .loot
		i 1- " " $cat over $cat
		#charprop: .lootamt
	next
	drop
;


