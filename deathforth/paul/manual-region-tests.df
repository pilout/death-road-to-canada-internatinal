regiondef{

	 region: testing
		w: 20
		h: 15
		script: 10 o'clock

		no-prefab

		: make-a-cabin map{
			"interior da cabine" $picklocid addloc
			temp{ 5 cabin } // 5 width
			}
		;

		: make-yallmart map{
			"yallmart" $picklocid addloc
			w 2 / 15 - h 2 - anchor!
			temp{ 6 5 yallmart }
			}
		;

		: make-gable-house map{
			"casa" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 7 house2 }
			}
		;

		: make-2storey-house map{
			"casa" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 6 house3 }
			}
		;

		: make-bungalow map{
			"casa" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 6 house1 }
			}
		;

		: make-generic-building map{
			"bla" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 7 0 building }
			}
		;

		: make-generic-building2 map{
			"bla" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			"MUSCLE! BOMBA!! ACADEMIA!!" sign-text!
			0.5 0.5 0.5 sign-border!
			0.1 0.1 0.1 sign-bg!
			1 0.5 0.5 sign-fg!
			temp{ mrand 8 0 building2 }
			}
		;

		: make-carolina-building map{
			"bla" $picklocid addloc
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 7 0 cbuilding2 }
			}
		;

		: make-florida-building map{
			"bla" $picklocid addloc
			0x 11 $chr "Pousada DewDropp" .. 0x 11 $chr .. sign-text!
			1 1 0.5 sign-fg!
			0 0.5 1 sign-bg!
			1 1 1 sign-border!
			
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 7 0 fbuilding }
			}
		;

		: make-shop map{
			"bla" $picklocid addloc
			"BUTTBURG HIGH" sign-text!
			w 2 / 3 - h 2 - anchor!
			temp{ mrand 9 0 shop }
			}
		;

		: setup-here
//			map{ grass make-a-cabin 30 pines }
//			map{ grass }
//			make-yallmart
//			make-gable-house
//			make-2storey-house
			make-bungalow
//			make-generic-building
//			make-generic-building2
//			make-carolina-building
//			make-florida-building
//			make-shop 20 %zombs

		;

		post-script: setup-here
}
