// Things anyone can say, not tied to a specific personality.

// Called once for each character

: bath-room 
	blurbslot 0= if
		"J'ai besoin d'utiliser la salle de bains." blurbsay
	else
		blurbslot 2 < if
			"Tu aurez du y aller la derniere fois!" blurbsay
			STAT_MORALE 1st-char .stat--
		then
	then
;

: sing-along
	blurbslot 0= if
		"On chante ensemble?" blurbsay
	else
		blurbslot 2 < if
			"Non, ta gueule" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"C'est du BULLCRAP." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "J'suis d'accord, " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"On devrait peut-etre rebrousser notre chemin..." blurbsay
	else
		blurbslot 2 < if
			"Tu devrais peut-etre te taire !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Une fois, j'ai vu un bodybuilder lancer une voiture sur des zombies!" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Ca n'a aucun sens, " .. 1st-char .name@ .. "." $) blurbsay
				"T'es un cinglÃ©!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Oh NICE!" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zombies" endof
	2 of "being dirty" endof
	3 of "the weather" endof
	4 of "bugs" endof
	5 of "how everyone is a jerk" endof
	6 of ($ me .name@ .. "'s dad" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " se plaint sans cesse de " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " ressuscite un passe tragique....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " fait un gros roulement d'yeux." $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "an old pet" endof
	2 of "Canada" endof
	3 of "the weather" endof
	4 of "dinosaurs" endof
	5 of "the next step in the plan" endof
	6 of "something funny in the past" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " parle de " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;

: civnoun 1 11 rnd case
	1 of "Twitter" endof
	2 of "fast food" endof
	3 of "email" endof
	4 of "selfies" endof
	5 of "celebrity news" endof
	6 of "viral videos" endof
	7 of "videogame streamers" endof
	8 of "the concept of hygiene" endof
	9 of "crudely illustrated fanfiction" endof
	10 of "imageboards" endof
	11 of "creepypasta" endof
	endcase ;

