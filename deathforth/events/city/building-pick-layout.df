	constant RARE-LOT-DECK
	RARE-LOT-DECK shuffles var rare-lot-deck

	: iscityseeker? args( chara ) <- chara .trait@ "Chercheur de ville" $= ;
	: cityseeker? team-stack ' iscityseeker? stack-filter nip 0 > ;
	
	: rarething
		cityseeker? if
			50
		else
			// 10 default, raise this to 100 for easy testing
			10
		then
		%chance if 
			cityseeker? if goodfx then
			rare-lot-deck depths ( does not consume the deck ) 0= if
				drop ""
			else
				drawcard ( consumes the deck )
			then
		else
		""
		then
	;
	
	: easyregcity
		houseorapt evaluate
		houseorapt-trash evaluate
	;
	
	: regcity
		houseorapt evaluate
		houseorapt evaluate
		houseorapt-trash evaluate
		rarething evaluate
	;
	
