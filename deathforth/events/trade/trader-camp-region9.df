constant maplayout

: plotmap
	0 -1 maplayout xyplot: pt
;

: site-setup
	1 no_time!
	7 14 rnd o'clock

	' plotgrass to ft

	30 %chance if 0 0.5 frnd weather! -1 2 frnd wind_force! else -1 1 frnd wind_force! then

	plotmap
	mission{ no-edge-spawns }

	// Put char and chars in middle of map
	12 %mv-up
	30 %chars-up
;

region: campsite9
	w: maplayout layoutw
	h: maplayout layouth

	trade-mode

	post-script: site-setup

} }
