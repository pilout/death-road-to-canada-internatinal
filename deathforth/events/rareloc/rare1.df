// Hazmat Guys

cyoa: hazmatrescue
	"Sauvetage Hazmat" cyoa-title!
	($ Thegroup .. "  sechappe des egouts!" $) text!
	hazmat1 0= hazmata 0= hazmatb 0= or or if
		($ Thegroup .. "  parti avant de retrouver tout le monde, donc il ny a pas eu de recompense." $) +crtext
		morale--all badfx
	then;
		0 hazmat1 .party! 0 hazmata .party! 0 hazmatb .party!
		hazmat1 .alive? hazmata .alive? hazmatb .alive? and and if
			"Toute lequipe Hazmat est sortie vivante !" +crtext
			morale2+all
		else
			"Tous les membres de lequipe Hazmat ne sont pas sortis, mais laide a quand meme ete appreciee." +crtext
		then

		hazmat1 .alive? if
			($ "Matt" pbold .. "  revele une cache de fournitures medicales soigneusement scellees !" $) +crtext
			10 trunk-medical+
		else
			($ "Matt" pbold .. " ' n'a pas survecu a sa mission de sauvetage." $) +crtext
		then

		hazmata .alive? if
			($ "Matilda" pbold .. " shows off a cache of food. It may or may not have been stashed in the sewer..." $) +crtext
			20 trunk-food+
		else
			($ "Matilda" pbold .. " ' n'est pas sorti des egouts." $) +crtext
		then

		hazmatb .alive? if
			($ "Mattie" pbold .. "  mime quelques techniques medicales durgence." $) +crtext
			' .medical++ foreach-team-char
		else
			($ "Mattie" pbold .. "  a ete laisse derriere." $) +crtext
		then

;

