// Bryce Li

cyoa-choice: bruce-picked 
	cchar .weapon_default@ WEAPON_KUNG = if
		($ cname .. "  se fait enseigner quelques techniques de niveau maitre! " .. cHe .. "  frappe maintenant encore plus fort! Maintenant " .. chis .. "  les mains peuvent toucher trois cibles par attaque!" $) text!
		WEAPON_MASTERKUNG
	else
		($ cname .. "  obtient un cours accelere darts martiaux! " .. cHe .. "  est capable dapprendre un mouvement tres pratique. Maintenant " .. chis .. "  les mains sont des armes anti zombies!" $) text!
		WEAPON_KUNG
	then cchar .weapon_default! goodfx
;

cyoa: brucerescued
	rescue to recruitee ricon
	0 rescue .party!
	recruitee .alive? if
		"Entrez dans la route de la mort" cyoa-title!
		($ rname .. "  sort de la voiture une fois quelle passe en toute securite devant la ville grouillante." $) text!
		solohuman if
			soloer choosechar
			cchar .weapon_default@ WEAPON_KUNG = if
				($ "En retour de laide, il enseigne " .. cname .. "  une forme encore plus avancee darts martiaux!" $) +crtext WEAPON_MASTERKUNG
			else
				($ "En retour de laide, il enseigne " .. cname .. "  comment ecraser des zombies avec " .. chis .. "  a mains nues !" $) +crtext WEAPON_KUNG
			then cchar .weapon_default! goodfx
		else		
			($ "En remerciement de son aide " .. rhim .. ", " .. rhe .. " offers to teach one person how to splat zombies bare-handed.
			Who should get the training?" $) +crtext
			' bruce-picked cyoa-human-choice
		then
	else
		"Defaite ecrasante" cyoa-title!
		($ Thegroup .. "  ressent un grand sentiment de perte pour " .. rname .. "  se faire manger. Ses connaissances en arts martiaux ont maintenant disparu." $) cyoa-text!
		morale2-all badfx
	then
;

