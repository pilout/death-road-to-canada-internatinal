// Junkyard Pals

cyoa: junkpalsrescue
	"Junkyard Rescue" cyoa-title!
	($ Thegroup .. "  sechappe de la casse !" $) text! goodfx
	junkpal1 0= not if
		0 junkpal1 .party!
		junkpal1 .alive? if
			($ "Clementine" pbold .. "  survit et montre de super conseils de reparation en reparant la voiture !" $) +crtext
			car-weld-rnd car-tune-rnd
			' .mechanic++ foreach-team-char
		else
			($ "Clementine" pbold .. "  ne sest pas echappe avec toi." $) +crtext
			morale--all
		then
	then
	junkpal2 0= not if
		0 junkpal2 .party!
		junkpal2 .alive? if
			($ "Tu as sauve " .. "Leonard" pbold .. ". En remerciement, il donne " .. thegroup .. "  des conseils de tir !" $) +crtext
			30 trunk-rifle-shell+
			' .shooting++ foreach-team-char
		else
			($ "Leonard" pbold .. "'les aventures de ' sont terminees." $) +crtext
			morale--all
		then
	then
;

