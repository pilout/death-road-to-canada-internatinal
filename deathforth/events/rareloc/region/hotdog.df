			loc-pick-script: make-a-foodshop
			
		loc-choice: drugshop
			loc-weight: 10
			loc-count: 1		
			
			loc-pick-script: make-a-drugshop
			
		loc-choice: sportingshop
			loc-weight: 10
			loc-count: 1		
			
			loc-pick-script: make-a-sportshop
						
		post-script: runme
}
