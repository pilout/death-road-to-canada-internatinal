// Creepy Store

cyoa-choice: common3-creepy-go
	($ cname .. " entre dans le magasin sombre et crepusculaire." $) text!
	cchar paranoid? if
		($ cHis .. " le sens habituel de la paranoia se retourne contre vous! " .. cHe .. " sa sens de lalerte normale revient en arriere  " .. cname .. " voit une souris minuscule et alors commence a " .. " hurlant comme un Youtuber" fbold .. "!" $) +crtext morale2- witsattREV sfx{ creepy }
	then;
	cchar oblivious? if
		($ cHe .. " ' ne remarque rien d'effrayant la dedans. Pas meme quand un " .. " SQUELETTE DANSANT EFFRAYANT" fbold .. "  tombe du plafond et commence a cliqueter !" $) +crtext
		witsattREV homesearch2 goodfx
	then;
	temper+roll if
		($ cHe .. "  reste calme, prend le butin " .. che .. "  trouve, et sort de la !" $) +crtext
		temperREV homesearch2 goodfx
	then;
		($ cHe .. " perd " .. chis .. "  calme et sort de la en courant, affirmant quil ny avait pas de butin !" $) +crtext
		temperREV morale-- badfx
;

cyoa-choice: common3-creepy-allgo
	someicon ($ Thegroup .. " entre dans le magasin sombre et crepusculaire." $) text!
	angriest-pass if angriest choosechar cicon
		($ cname .. "  prend un mannequin pour un zombie et attaque ! Cela fait " .. everyone .. "  paniquer et commencer aussi a attaquer aveuglement. Au final, aucun mannequin nest reste debout." $) +crtext temperREV
		ouch--all bitefx
	else
		"Tout le monde reste assez calme ! Le magasin est pille sans incident." +crtext goodfx
	then ' .temperREV foreach-team-char homesearch2
;

cyoa-choice: common3-creepy-pick
	"Qui devrait entrer dans le magasin effrayant ?" text!
	' common3-creepy-go cyoa-team-choice
;

cyoa: common3-creepy
	"Magasin sombre et effrayant" cyoa-title! image-female-zombie-1
	($ Thegroup .. " ' trouve un magasin inonde. Il y a beaucoup de mannequins a l'interieur, a peine visibles dans l'obscurite. L'ensemble du magasin est particulierement effrayant. Il peut y avoir des fournitures moisies laissees la dedans." $) text!
		choice( "Francais" )choice
		solo if
			soloer charchoice( " entre dans le magasin" )choice: common3-creepy-go
		else
			choice( "Envoie quelquun" )choice: common3-creepy-pick
			choice( "Envoie tout le monde !" )choice: common3-creepy-allgo
		then
;

// Bad Weather Siege

cyoa-choice: common3-badweather-drive
	smartest choosechar
	($ Thegroup .. " fait preuve dimprudence et decide de continuer a conduire." $) text!
	cchar .wits 3 skillcheck? if 
		($ cname .. " se tend " .. chis .. " les yeux et parvient a eviter de justesse de percuter quoi que ce soit !" $) +crtext goodfx witsREV
	else
		car-armor 0 > if
			"La voiture percute des obstacles invisibles sous la pluie. Une partie de son blindage finit par tomber." +cr +text goodfx
			-1 ' car-armor +!
		else
			-2 -3 rnd car-chassis+ badfx
			car-chassis 0 > if
				($ "La voiture est endommagee en traversant une epave " .. thegroup .. " 'n'a pas vu a temps, mais elle roule toujours." $) +crtext
			else
				($ "La voiture percute de plein fouet le cote dune voiture en ruine sur la route et est detruite " .. Thegroup .. " commence a marcher." $) +crtext
			then 
		then
	then
;

cyoa-choice: common3-badweather-fight
	($ Thegroup .. " 'ne s'installe meme pas dans cette maison avant de realiser qu'une grande horde s'approche sous la pluie battante." $) text!
	2.3 15 20 rnd 1 siegecast // 1.7
	"events/siege/region/midopen1.df" $load-region
	choice( "Essayez de survivre" )choice: premission
;

cyoa-choice: common3-badweather-camp
	someicon ($ Thegroup .. " prend la route secondaire moins frequentee et trouve un endroit pour camper jusqua ce que le temps seclaircisse." $) text! chowday
	"Il faut une journee supplementaire pour que le temps sameliore suffisamment pour continuer le voyage " +crtext
	+cr fullcamp heal-event 1 calendar-day+
;

cyoa: common3-badweather
	"Conduire par mauvais temps" cyoa-title!
	image-water-driving 73 to cyoaicon
	($ "La pluie commence a tomber. Il est difficile de voir, et les formes des zombies rodent juste a la limite de l'obscurite " .. Thegroup .. " ' n'est pas sur de ce qui serait pire : continuer, ou s'arreter ici." $) text!
	vehicle.which@ 0 > if choice( "Continuez a conduire" )choice: common3-badweather-drive then
	choice( "Cherchez refuge dans la maison" )choice: common3-badweather-fight
	fullmeal if
		choice( "Descendez la route secondaire, campez" )choice: common3-badweather-camp
	then 1.4 2 frnd weather! -2 2 frnd wind_force!
;

cyoa-choice: common3-horde-plow
	($ Thegroup .. "  decide dessayer de traverser la horde !" $) text! car-plowthrough
;

cyoa-choice: common3-horde-fight
	($ Thegroup .. "  se cache dans une maison voisine pour attendre que la horde se disperse. Les zombies finissent par sagiter et ils attaquent !" $) text!
	2.4 15 20 rnd 1 siegecast // 1.7
	"events/siege/region/midopen1.df" $load-region
	choice( "Essayez de survivre" )choice: premission
;

cyoa: common3-horde
	"Trafic intense" cyoa-title!
	image-zombie-hoard-1 9 to cyoaicon
	($ "'Il y a une grande horde de zombies sur la route devant. " .. Thegroup .. " ' n'est pas sur si " .. gthey .. "  pourrait les traverser ou non." $) text!
	choice( "Cherchez refuge dans la maison" )choice: common3-horde-fight
	vehicle.which@ 0 > if 
		choice( "Faire un detour" )choice: car-detour
		choice( "Labourez !" )choice: common3-horde-plow 
	then
;


