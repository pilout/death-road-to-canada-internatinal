// Gloomy Weather

: common3-gloom-attcheck args( @ )
	<- @ .attitudeREV
	<- @ .cattitude+ if
		($ <- @ .colourname .. "  garde une attitude positive!" $) +crtext
	then;
	<- @ .cattitude- if
		<- @ .morale2-
	else
		<- @ .morale--
	then	
;

cyoa-choice: common3-gloomy-pick
	($ cname .. "  commence a parler, pour ameliorer lhumeur." $) text!
	cpet? if
		($ cHe .. " fait " .. cdogcat .. " ' bruits. C'est une distraction suffisante de la meteo!" $) +crtext morale++	goodfx
	then;
	cchar grating? if
		($ cHe .. "  raconte " .. everyone .. "  to " .. "  CALMER LE JEU." pbold $) +crtext
		cool-it-7 if
			($ Everyone .. "  rit de bon cur! Cette phrase daccroche ne vieillit jamais!" $) +text
			morale2+all goodfx
		else cool-it++
			"Cela ne passe PAS bien du tout." +text morale3-all badfx
		then witsattREV
	then;
	ctemper- if
		($ cHe .. " perd " .. chis .. "  temperament et commence a se plaindre de la meteo! " .. cHe .. "  se sent mieux mais " .. everyone .. "  il doit supporter les plaintes." $) +crtext badfx
		temperREV morale++ cchar ' .morale-- foreach-team-char-except
	then;
	cattitude+ if
		($ cHe .. "  parvient a distraire " .. everyone .. "  de la meteo deplaisante !" $) +crtext goodfx attitudeREV
	then;
	cattitude- if
		($ cHe .. "  plaindrait et plaindrait, sur la meteo et dautres sujets non lies." $) +crtext badfx
		attitudeREV morale2-all
	then;
	"'Cela ne laide pas beaucoup." +crtext badfx
	' common3-gloom-attcheck foreach-team-char
;

