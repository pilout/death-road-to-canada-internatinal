cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"Mini Golf!" cyoa-title!
	($ Thegroup .. " sinstalle au camping le plus sur quils puissent trouver : un parcours de mini golf abandonne. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "Le matin " .. gthey .. "  trouver" .. g1s .. " une balle de golf et un putter en cherchant la zone. " .. Thegroup .. " decide de jouer une petite partie!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. "  court partout avec excitation!" $) +crtext morale++
		else
			($ cname .. "  fait un peu dexercice!" $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. "  se lasse du jeu et perd ensuite la balle expres." $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. "  mord accidentellement la balle." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. "  detruit accidentellement le putter." $) +crtext morale++
		else
			($ cname .. "  frappe accidentellement la balle si loin quelle se perd." $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;

// Driving range with different choices

// previously they find a less dangerous and less fun place to camp - fullcamp
cyoa-choice: camp2-fore-flee
	($ Thegroup .. "  decide de fuir le terrain de golf " .. gThey .. "  finissent par ne pas trouver un autre endroit pour dormir, et conduisent pendant la majeure partie de la nuit " .. gThey .. "  sont tres fatigues le lendemain." $) cyoa-text! +cr tiredcamp
;
cyoa-choice: camp2-fore-fore
	solo if
		soloer choosechar
		cpet? if
			($ cname .. " ' tente de jouer au golf, mais cest difficile a faire en tant que " .. cdogcat .. ". " .. cHe .. " maybe could have done it with a caddy.
			" .. cname .. "  est completement depasse." $) cyoa-text! morale3- ouch-- sting-- bitefx 
		else
			($ cname .. " ' frappe un tas de balles de golf dans des tetes de zombies. Cest un assez bon exercice, mais bientot " .. che .. " is overwhelmed by them.
			" .. cHe .. "  sechappe, mais passe la nuit cache dans un placard " .. cHe .. "  est epuise le matin." $) cyoa-text! fitness++ fitnessREV morale-- sting-- bitefx  
		then someone choosechar alive? if +cr tiredcamp then
	then;
	($ Thegroup .. "  prend un tas de clubs et recupere quelques seaux de balles de golf. Ils commencent a tirer des coups sur le parcours alors que les zombies se rapprochent." $) cyoa-text! 
	fitness-total 7 > if
		"Ils envoient balle de golf apres balle de golf dans la horde qui arrive." +crtext
		strength-total 7 > if
			"Lequipe frappe les zombies de lautre cote du parcours. Ils ne sapprochent meme jamais !" +crtext goodfx morale++all
		else
			"'Les zombies se font bombarder de balles de golf, mais ils ne sont pas assez durement touches pour etre ralentis. L'equipe finit par les combattre normalement." +crtext someone .sting-- someone .sting-- bitefx
		then
		unfittest .fitness++ ' .fitnessREV foreach-team-char 
		' .strengthREV foreach-team-char +cr fullcamp
	else
		($ "'C'est un travail difficile, et l'equipe s'epuise surtout " .. gThey .. "  sont submerges par les zombies." $) +crtext ouch--all ' .fitnessREV foreach-team-char +cr choosehuman alive? if fullcamp then bitefx
	then
	1 WEAPON_GOLF trunk.weapon+
;
cyoa-choice: camp2-fore-mech
	($ cname .. " ' saute dans un ramasse balles de golf et commence a ecraser les zombies. C'est etonnamment efficace. Au moment ou le ramasse balles tombe en panne, la plupart des zombies sont elimines." $) cyoa-text! morale++all mechanicREV mechanic++ +cr fullcamp
;
cyoa-bridge: camp2-fore-fight
	($ "'Les zombies commencent a frapper la porte du magasin de golf. Il n'y a pas beaucoup de temps pour se preparer avant que la porte ne se brise !" $) cyoa-text!
		2.4 20 22 rnd 1 siegecast // Formerly 1.3 then 1.7 diff
		"events/siege/region/golfcamp.df" $load-region
		choice( "Essayez de survivre" )choice: premission
;

cyoa: camp2-fore
	image-golf-course
	"Dernier combat du practice de golf" cyoa-title! 
	choosehuman
	($ Thegroup .. "  campe dans un magasin de golf pres dun parcours de golf " .. cname-He .. "  regarde par la fenetre et voit un grand groupe de zombies approcher du practice de golf !" $) cyoa-text! basic-tone 3 WEAPON_GOLF trunk.weapon+
	mechanicest-pass if
		mechanicest charchoice( "  branche un ramasse balles de golf" )choice: camp2-fore-mech
	then
		choice( "Tirez des balles de golf sur les zombies" )choice: camp2-fore-fore
		choice( "Preparez vous au siege!" )choice: camp2-fore-fight
		choice( "Conduisez sans dormir" )choice: camp2-fore-flee
;

