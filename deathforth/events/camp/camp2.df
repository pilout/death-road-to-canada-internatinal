// Night watch for bandits, or rather thieves

cyoa-choice: camp2-bwatch-drive
	($ Thegroup .. " refuse de camper dans une zone dangereuse et passe une nuit tendue et sans sommeil en conduisant a travers le noir." $) cyoa-text! morale--all +cr tiredcamp
	50 %chance if "La voiture devie de la route et heurte un arbre." +crtext  -2 car-chassis+ then
;
cyoa-choice: camp2-bwatch-pick
	($ cname .. " garde la veille pour la nuit" $) cyoa-text!
	cloyalty- if
		($ cHe .. " ignore la tache et tombe a leveil presque instantanement. Le matin, beaucoup dapprovisionnements manquent." $) +crtext sleep bandit-supplies2
	else
		($ cHe .. " arrive a rester eveille, mais se sent mal au matin." $) +crtext
		sleep-except morale--
	then loyaltyREV
	+cr chowtime
;

cyoa-bridge: camp2-bwatch-pick4
	someicon
	"Qui devrait rester veiller la nuit?" cyoa-text!
	' camp2-bwatch-pick cyoa-team-choice
;

cyoa: camp2-bwatch
	image-bandit-watch
	"Bandit Watch" cyoa-title! 
	($ "Qui devrait rester eveille pour surveiller?" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp2-bwatch-pick 2 #cyoa-team-choice
			choice( "Choisissez quelquun dautre" )choice: camp2-bwatch-pick4
		else
			' camp2-bwatch-pick 3 #cyoa-team-choice
		then
		choice( "Continuer a conduire" )choice: camp2-bwatch-drive
;

// Night watch for zombies

cyoa-choice: camp2-zwatch-awake
	($ cname .. " decide de se coucher, pariant que les zombies ne trouveront pas " .. chim .. "." $) cyoa-text!
	50 %chance if
		($ cHe .. " se reveille au milieu de se faire manger par un petit groupe de zombies. Sans personne pour laider. " .. chim .. ", c'est difficile de se liberer." $) +crtext despairbite
	else
		($ cHe .. " " $) +crtext
	then
	someone choosechar alive? if +cr fullcamp then
;
cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. " prend des tours pour dormir pendant la nuit." $) text!
	team-count 4 < if 
		($ cname .. " is very tired in the evening " .. theothers .. " n'ai pas bien dormi non plus." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "Avec un groupe complet, il y a assez de gens pour dormir en paix!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. " surveille les zombies errants." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. "  cesse de preter attention et segare au milieu de sa garde. " .. gHe .. "  est pris en embuscade par des zombies, mais parvient a les combattre." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. "  sendort presque instantanement. " .. gHe .. "  se reveille au milieu dun repas." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. "  parvient a rester eveille, mais se sent groggy le matin." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then
;

cyoa-bridge: camp2-zwatch-pick4
	someicon
	"Qui devrait rester veiller la nuit?" cyoa-text!
	' camp2-zwatch-pick cyoa-team-choice
;

cyoa: camp2-zwatch
