: site-setup

	// 1 to parktype
	parktype 0 = if 
		33 %chance if 1 to park-car-spawned then
		PARKBUILD-OPTIONS
	else 1 to park-car-spawned PARKBUILD2-OPTIONS 
	then shuffles to parkbuild-options
	
	PARKDECO-OPTIONS shuffles to parkdeco-options
	
	' plotpave to ft plotmap

	resetcarkeys

	rndsign wind_force!
	timeofday o'clock

	5diff %zombs
;

