cyoa{

cyoa: parkrescue
	rescue choosechar cicon
	dead? if npc-died then;
	"Toilettenpause" cyoa-title!
	($ cname .. "  hat uberlebt " .. chis .. " danach " .. che .. " 	umzingelt von den nahegelegenen Horden." .. cHe .. "  fragt ob " .. che .. "  dir folgen kann." $) cyoa-text!
	park-car-spawned 0 > if
		($ "Zu viele Zombies im anderen Badezimmer! Ich glaube ich habe dort meine Autoschlussel verloren." pbold $) +crtext
	then
		choice( "Lass " .. chim .. "  dir folgen"  )choice: rescueme-2
		choice( "Lass " .. chim .. "  vorerst" )choice
;

}

: .parkmake args( ch )
	rescue-weapon <- ch .weapona! 
;

: park-rescue-npc new-npc@ .parkmake
	1 lt .unseen! 0 lt .leaveok! 
	npc@rescue cyoa{ ' parkrescue cyoa! }
;

: shackloot
	branchtrim .drift
	rake .drift
	broom .drift
	mop .drift
	50 %chance if
		20 25 rnd dgas
		10 %chance if 
			chainsaw
		else
			50 %chance if
				whacker
			else
				blower
			then 
		then .drift
	else
		10 %chance if 
			echainsaw
		else
			50 %chance if
				ewhacker
			else
				eblower
			then 
		then drift
	then
;

