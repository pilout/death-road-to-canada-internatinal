
cyoa{ road{

cyoa-choice: bandit-car-plow
	($ Thegroup .. " decide de foncer a travers le barrage des bandits et Lord Humungoid." .. gThey .. " prennent" .. g1s .. " beaucoup de degats, mais survivent" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;

cyoa-choice: bandit-car-paranoid
	($ cname .. " a elabore un plan pendant le discours." $) cyoa-text!
	cpet? if
		($ cHe .. " commence a klaxonner. Les bandits sont amuses par la vue dun animal faisant cela. Ils decident de laisser " .. thegroup .. " passer. Tout fait partie du plan !" $)
	else
		($ cHe .. " appuie soudainement sur laccelerateur et tourne fort. La voiture traverse un petit espace dans le barrage routier, puis continue. Au moment ou les bandits reagissent " .. thegroup .. " a deja trop davance pour valoir la peine detre poursuivi." $)
	then +crtext morale++all witsattREV goodfx
;

cyoa-bridge: bandit-car-coolit
	cpet? if
		($ "Apres une pause dramatique, " .. cname .. "  pete. Ca resonne." $)
	else
		($ cname .. "  dit a Lord Humungoid de" .. "  CALMER LE JEU." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Humungoid" recruitee .name!
		($ "Lord Humungoid a un enorme changement de cur.		" .. "THERE HAS BEEN TOO MUCH VIOLENCE... TOO MUCH PAIN. BUT I HAVE AN HONORABLE COMPROMISE!" rbold .. "		Il offre un cadeau et un passage sur !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "'Lord Humungoid n'aime pas ca. Les bandits prennent la voiture et toutes les " .. thegroup .. "'provisions qu'ils trouvent." $) +crtext badfx car-abandon bandit-all morale2-all
	then witsattREV 
;

cyoa-choice: bandit-car-pay
	image-buff-bandit
	($ Thegroup .. " ' sort de la voiture et s'en va indemne. Les derniers mots de Lord Humungoid avant de sortir dans la " .. thegroup .. "'voiture sont " .. "A PLUS TARD, LES NERDS !" rbold $) cyoa-text! car-abandon bandit-gas
;
	

cyoa: bandit-car
	"Bandits collectionneurs de voitures" cyoa-title!
	($ "Les bandits ont bloque la route etroite devant eux avec leurs voitures. Leur chef, " .. "Lord Humungoid" pbold .. " parle" .. "JUST WALK AWAY! GIVE ME YOUR CAR! YOUR OIL! THE GASOLINE! AND I WILL SPARE YOUR LIVES.	I AWAIT YOUR ANSWER." rbold $) cyoa-text!
		choice( "Give up the car and all gas" )choice: bandit-car-pay
		bandit-fight
		most-paranoid if
			charchoice( "  already has a plan" )choice: bandit-car-paranoid
		then
		most-grating if
			charchoice( " 'Calmez vous'" fcoolit )choice: bandit-car-coolit
		then
		choice( "Plow through them!" )choice: bandit-car-plow
;

// Medical bandits

cyoa-choice: bandit-medic-help
	($ cname .. "  offers to heal the injured bandit with " .. chis .. "  medical know how. " $) cyoa-text!
	medicalroll cmedical+ or if
		($ cHe .. "  fixes things right up! The bandits let " .. thegroup .. "  go." $) +text goodfx
	else
		($ cHe .. " ' ends up making things worse! The bandits aren't very happy." $) +text
		bandithurt bitefx
	then medicalREV medical++
;

cyoa-choice: bandit-medic-paranoid
	cpet? if
		($ cname .. "  knew that something was very wrong the whole time. Due to " .. chis .. " " .. cgrowlhiss .. "ing, " .. everyone .. "  is warned early. " .. gTheyare .. "  ready to fight before the bandits are, and escape unharmed." $) 
	else
		($ "Always suspicious, " .. cname .. "  cache la voiture et les approvisionnements avant dapprocher le reglement. " .. cHe .. " ' pretend ne posseder rien de valeur. Les voleurs s'y mefient, mais ne trouvent rien. Ils laissent finalement " .. thegroup .. "  go." $)
	then cyoa-text! witsattREV goodfx
;

cyoa-bridge: bandit-medic-coolit
	cpet? if
		($ cname .. "  fart dans une tonalite qui sonne comme une petite violoncelle." $)
	else
		($ cname .. "  ordonne aux voleurs fausses de " .. "  CALMER LE JEU." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee " Voleur Faux" recruitee .name!
		($ "Le bandit blesse semble etre tres touche par cela !		" .. "WOW ! Je me sens beaucoup mieux maintenant !" rbold .. " elle se leve, fait une contorsion et ordonne que vous soyez amenes un cadeau !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "Les voleurs regardent le " .. thegroup .. " attendent un moment. Puis ils prennent la plupart des " .. ghis .. " approvisionnements." $) +crtext badfx bandit-mostgas morale2-all
	then witsattREV 
;

: bandit-medic-pay
		-8 trunk-medical+
;
	

cyoa: bandit-medic
	"Piege aux Marchands" cyoa-title!
	($ Thegroup .. " verifie ce qui semble etre un etablissement de commercants " .. gTheyare .. "  au lieu detre embusques par des bandits qui lont envahi. Lun deux semble blesse.	" .. "Ils demandent " rbold $) cyoa-text!
	solo if
		soloer ispet? if
			($ "... oh wait, it's just an animal. False alarm!" rbold .. "
			The bandits let " .. soloname .. "  vas y !" $) +text goodfx
		then;
	then
	trunk-medical 7 > if
		($ "8 fournitures medicales !" rbold $) +text
		choice( "Donnez leur 8 fournitures medicales" )choice: bandit-medic-pay
	else
		bandit-demand
	then
		medicalest charchoice( "  propose de soigner les blessures" )choice: bandit-medic-help
		most-grating if
			charchoice( " 'Calmez vous'" fcoolit )choice: bandit-medic-coolit
		then
		most-paranoid if
			charchoice( "  ai vu ca venir" )choice: bandit-medic-paranoid
		then
		bandit-fight
;

// Weapon thieves

cyoa-choice: bandit-weapon-paranoid
	solo if 
		($ cname .. "  se sentais suspicieux a propos du campement, alors " .. che .. "  ai laisse la voiture en marche. " .. cHe .. "  fait semblant de ceder a leurs demandes, mais court vers la voiture qui attend des que " .. che .. " ' peut. Les armes des bandits sont trop merdiques pour faire quoi que ce soit a la voiture une fois que " .. che .. "' est a l'interieur, alors " .. che .. "  DECOLLE." rbold $) cyoa-text! goodfx
	else
		($ cname .. "  se sentais suspicieux a propos du campement, alors " .. che .. "  voulait attendre pres de la voiture. Alors que " .. everyone .. " se fait voler, la voiture fonce a travers le camping, ecrase une tente, puis sarrete. Les bandits sont effrayes, alors ils senfuient!" $) cyoa-text!
		cpet? if 
			cdog? if 
				($ cname .. " verrouille accidentellement " .. chim .. "il se met dans la voiture et aboie pour quon le laisse sortir." $)
			else
				($ Everyone .. " nest pas sur que " .. cname .. " a fait tout cela expres ou non." $)
			then +crtext
		else
			cloyalty- if
				($ notcname .. " est vraiment surpris " .. cname .. " n'a pas essaye de voler la voiture " .. cHe .. "  semble nerveux pendant un moment." $) +crtext
			then loyaltyREV
		then
	then goodfx witsattREV morale++all
;

cyoa-bridge: bandit-weapon-coolit
	cpet? if
		($ cname .. "  pete et en fait un tres gros probleme." $)
	else
		($ cname .. "  dit aux bandits de" .. "  CALMER LE JEU." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Crappy Bandit" recruitee .name!
		($ "Les bandits prennent vraiment cela a cur.		" .. "Ouais ! Qui a besoin darmes quand on a de lamitie ?" rbold .. "		Ils offrent un cadeau !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "Les bandits commencent tous a attaquer " .. cname .. ". Ils oublient les armes." $) +crtext badfx ouch2-
	then witsattREV 
;

: bandit-weapon-check args( @ ) 
	<- @ .cstrength+ if
		($ <- @ .colourname .. "  combat les bandits avec " .. <- @ xhis .. "  force !" $) +crtext
		<- @ .strengthREV
	else
		<- @ .cstrength- if
			<- @ .ouch-- <- @ .sting--
		else
			<- @ .ouch--
		then
	then
;

cyoa-choice: bandit-weapon-fight
	($ Thegroup .. " ' decide de tenter sa chance dans un combat.		Les armes des bandits sont rudimentaires, mais elles restent dangereuses." $) cyoa-text! 
		bitefx ' bandit-weapon-check foreach-team-char
;

cyoa-choice: bandit-weapon-pay
	($ Thegroup .. "  finit par donner toutes " .. ghis .. "  armes aux bandits.	Les bandits donnent " .. ghim .. " lui quelques vieilles armes, peut etre ressentant un peu de culpabilite." $) cyoa-text! 0weaponsall trunk.clear morale2-all someicon badfx
	3 WEAPON_NAIL trunk.weapon+ 2 WEAPON_REBAR trunk.weapon+ 1 WEAPON_FISHING trunk.weapon+
	1 WEAPON_PARKING trunk.weapon+
;

cyoa-choice: bandit-weapon-calmshot
	($ cname .. " " .. ghis .. " arme se d'une arme a la vitesse de la foudre et brise en morceaux les armes des bandits. Les bandits commencent a s'enfuir!  Weapon at lightning speeds and breaks all the bandits' flimsy weapons apart. The bandits start running!" $) cyoa-text! goodfx shootingREV temperREV shooting++
;
	

cyoa: bandit-weapon
	"Voleurs de fusils  Weapon Stealing Bandits" cyoa-title! someicon
	($ "Comme " .. thegroup .. " explore un campement,   explores a campsite " .. gtheyare .. " est surpris par des bandits. Ils brandissent des armes makeshift.	  is ambushed by bandits. They brandish makeshift weapons.	" .. "Ils reclament tous vos fusils.  They demand all of your weapons." rbold .. "c'est absurde. Pas meme les bandits ne le feront generalement, car c'est une sentence de mort lente mais sure.  This is absurd. Not even bandits will usually do this, as it's a slow but sure death sentence." $) cyoa-text!
		calmshot-check if
			charchoice( " il tire rapidement et tire  quickdraws and fires" )choice: bandit-weapon-calmshot
		else
			choice( "Luttez contre les bandits!  Fight the bandits!" )choice: bandit-weapon-fight
		then
		most-paranoid if
			solo if charchoice( " qui a laisse la voiture en marche  who left the car running" )choice: bandit-weapon-paranoid
			else charchoice( " arrive a votre secours  comes to the rescue" )choice: bandit-weapon-paranoid then
		then
		most-grating if
			charchoice( " 'Calmez vous'" fcoolit )choice: bandit-weapon-coolit
		then
		bandit-charm
		choice( "Abandonnez toutes les armes!" )choice: bandit-weapon-pay
;

cyoa-choice: bandit-loyal-pick
	cicon
	($ cname .. " is sent to distract the bandits so they leave their car checkpoint." $) cyoa-text!
	cloyalty- if
		($ cname .. " sallume instantanement " .. everyone .. " et rejoint les bandits, a la place." $) +crtext
		loyaltyREV decruit-bad
		($ Thegroup .. " est attaque " .. gThey .. "  tentative" .. g1s .. " to escape..." $) +crtext
		bandithurt
	then;
	($ cname .. " ' ne vend pas " .. everyone .. "  aux bandits! " .. cHe .. "  les distrait de loin et court. Ils donnent la chasse, et la voiture est capable de passer." $) +crtext
	ctemper- if
		($ cname .. "  panique en se retirant. " .. cHe .. "  finit par ne pas suivre le plan correctement, et se blesse !" $) +crtext cchar .sting12rnd-- bitefx
	else
		goodfx
	then
		($ cname .. "  se faufile autour du point de controle plus tard, et rejoint " .. everyone .. "." $) +crtext
		loyaltyREV
		
;

cyoa-choice: bandit-loyal-plow
	($ Thegroup .. "  decide de labourer la voiture a travers le point de controle.	" .. gThey .. " prennent" .. g1s .. " beaucoup de degats, mais survivent" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;
: bandit-loyal-plow? choice( " Labourez la voiture a travers !" )choice: bandit-loyal-plow ;

cyoa-choice: bandit-loyal-paranoid
	($ cname .. "  fait un plan de sauvegarde avant detre repere." $) cyoa-text!
	($ cHe .. " ' se retire dans un batiment en ruine, ou les bandits ne peuvent pas voir " .. chim .. ". Quand ils se rapprochent, " .. che .. "  saute par une fenetre arriere, se faufile " .. chis .. "  jusqua la voiture, et sechappe par un point de controle maintenant vide !" $) +crtext goodfx
;

cyoa-bridge: bandit-loyal-pick4
	someicon
	"Qui devrait etre envoye pour distraire les bandits?" cyoa-text!
	' bandit-loyal-pick cyoa-team-choice
;

cyoa: bandit-loyal
	"Qui peut etre fait confiance?" cyoa-title! someicon
	solo if
		($ cname .. " un groupe de bandits qui ont etabli un poste de controle sur la route. " .. cHe .. " na pas de bonne facon de les distraire, et finit par se faire reperer." .. "Ils demandent " rbold $) cyoa-text!
		bandit-demand
		most-paranoid if
			charchoice( " a un plan pour les tromper" )choice: bandit-loyal-paranoid
		then
		bandit-charm
		bandit-loyal-plow?
		bandit-fight
	else
		($ Thegroup .. "  apercoit un groupe de bandits qui ont installe un poste de controle sur la route. Quelquun de lequipe pourrait etre envoye pour distraire les bandits afin que la voiture puisse passer. 		Il faudrait que ce soit quelquun de calme et de " .. "digne de confiance" rbold .. "." $) cyoa-text!
		team-count 3 > if
			' bandit-loyal-pick 2 #cyoa-team-choice
			choice( "Choisissez quelquun dautre" )choice: bandit-loyal-pick4
		else
			' bandit-loyal-pick 3 #cyoa-team-choice
		then
			bandit-loyal-plow?
	then
;

