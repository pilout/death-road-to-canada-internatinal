: delete-cover-events 0 args( me eventid thing )
	<- eventid THING_EVENT_PUSH = if
		<- me .interact_id@ #thing -> thing
		<- thing .mass@ 100 < if then;
		32 <- me .timer!
		<- thing silentkillit
	then;

	// Times up, no more deleting stuff
	<- eventid THING_EVENT_TIMER = if
		1 <- me .walkover!
		<- me .bbox
	then;
;

