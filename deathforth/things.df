: haunted-item-events args( me eventid )
	<- eventid THING_EVENT_TIMER = if
		-1 1 frnd <- me .vel.x!
		-1 1 frnd <- me .vel.y!
		-1 -2 frnd <- me .vel.z!
		0 5 frnd dup * rndsign * <- me .angle!
		15 600 rnd <- me .timer!

		3 onein if
			0 15 frnd <- me .anim.floatheight!
			5 <- me .anim.floatval!
		else
			0 <- me .anim.floatheight!
			0 <- me .anim.floatval!
		then

	then;
;

