: use-cartype
	dup vehicle.which! 0= if then;
	motor-default
	car-list vehicle.which@ peek nip execute
	car-update-display
;

: new-cyoa-car
	use-cartype mrand vehicle.variant!
;

: get-car new-cyoa-car goodfx ;

voc{ textfill

0x 17 $chr constant DOT1
0x 1e $chr constant DOT2
0x 18 $chr constant DOT3
DOT2 value STAR
DOT1 value DOT
0x 1d $chr constant HOLE
0x 2 $chr constant GAP
: +dots for DOT +text next ;
: +stars for STAR +text next ;
: +holes for HOLE +text next ;
: +gaps for GAP +text next ;
: +starbar over +stars swap - +holes ;
5 value barlength
: +%starbar / barlength * >int dup +stars barlength swap - +holes ;

// TODO: Maybe put different text in here depending on bar values
: +repairstatus +purple "chassis" +text +white ;
: +wearstatus +purple "moteur" +text +white ;
: +armourstatus +purple "blindage" +text +white ;
: +carspeed 
	car-speed 2 < if 
		+red "Lente"
	else
		car-speed 2 = if
		+blue "Myenne"
		else
		+green "Rapide"
		then
	then +text +white 
;

// TODO: Days left to CANADA
: +canadadays +red road{ nearcanada-day 1 + road-trip-days - } +text +white ;

: zombop-cr "Zombo Points: " pbold +text gstats{ zombo-point } +text " / " +text gstats{ ZOMBOP_CAP } +text +cr ;

: vehicle-tab-text

	"Mode de Jeu: " pbold +text 

	"PAS DE MODE DE JEU" // Default case
	gamedef{ ' defaultmode gamemode? } if drop "Death Road Normal" then
	gamedef{ ' longroad gamemode? } if drop "Long Winding Road" then
	gamedef{ ' specialchars gamemode? } if drop "Rare Characters" then
	gamedef{ ' familiarchars gamemode? } if	drop "Familiar Characters" then
	gamedef{ ' specialcharsEX gamemode? } if drop "Rare Characters EXTREME" rainbold then
	gamedef{ ' familiarcharsEX gamemode? } if drop "Familiar Characters EXTREME" rainbold then
	gamedef{ ' kepamode gamemode? } if drop "K*E*P*A" fbold then
	gamedef{ ' shortroad gamemode? } if drop "Short Trip to Heck" then
	gamedef{ ' marathonmode gamemode? } if drop "Marathon" fbold then
	gamedef{ ' endlessmode gamemode? } if drop "Endless Mode" fbold then
	gamedef{ ' deadlier gamemode? } if drop "Deadlier Road" then
	gamedef{ ' OPPmode gamemode? } if drop "O*P*P Mode" fbold then
	gamedef{ ' quicknightmare gamemode? } if drop "Quick Death Mode" fbold then
	gamedef{ ' 4jerksmode gamemode? } if drop "Four Jerks Mode" then
	gamedef{ ' 4jerksmodeEX gamemode? } if drop "Four Jerks Mode EXTREME" rainbold then

//	0 gamemode? not if drop "MODE DE JEU CUSTOM" then

	+text +cr

	zombop-cr +cr	

	road_theme@ 4 = if
		"VOUS ETES ARRIVE AU CANADA!!!" fbold +text
	then;
	
	road{ nearcanada-day 1 + road-trip-days - } 0= if
		"VOUS ETES SUR LE POINT DE PASSER AU CANADA!!!" rainbold +text
	then;

	vehicle.which@ if

		DOT2 to STAR
		0x 19 +chr " " +text car-chassis car-max-chassis +%starbar 3 +gaps
			+repairstatus +cr
		DOT3 to STAR
		0x 1b +chr " " +text car-engine car-max-engine +%starbar 3 +gaps
			+wearstatus +cr 

		car-armor if
			0x 1a +chr " "  +text car-armor +dots 5 car-armor - +gaps 3 +gaps
			+armourstatus +cr
		then
		
		+purple 2 +gaps "Car Speed:" +text 2 +gaps +carspeed +cr
		
		gamedef{ ' endlessmode gamemode? } if
		
			road{ road-trip-days } 2 < if 
				+cr "Je viens de commencer le voyage sans fin!" +text +cr
			then;
			
			road{ road-trip-days } 3 < if 
				+cr "Survecu au premier jour du mode sans fin!" +text +cr
			then;
		
			+cr "Toujours en vie apres " +text +red road{ road-trip-days } 1 - +text +white " jours sur la route!!!" +text +cr
				
		then;
		
		+cr "Seulement " +text +canadadays " jours de conduite restant jusqu'au CANADA!!!" +text +cr
		
	then;

	road{ road-trip-days nearcanada-day < } if
	
	"Seulement " +text +canadadays " jours de conduite restant jusqu'au CANADA..." +text +cr
	+cr "...SI NOUS ON AURAIT UNE VOITURE " +text DX +text +cr
	
	then;
	
	"Seulement " +text +canadadays " jours restant jusqu'au CANADA!!!" +text +cr	
	
;

