	// KIDNEY
	
	gamedef{ ' 4jerksmode gamemode? } if
		gstats{ ' wins-4jerks ++ ' wins-4jerks-streak ++ }
		($ "Four Jerks Mode completed" ..
		gstats{ wins-4jerks } 1 > if
